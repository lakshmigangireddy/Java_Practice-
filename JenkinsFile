
pipeline {
   agent any 
   stages{
     stage('Git checkout') {
     steps{
           git branch: 'main', credentialsId: 'github-id', url: 'https://github.com/lakshmigangireddy/Java_Practice-.git'            }
     
     }

     stage('Build stage'){
       steps {
          sh '  mvn clean package '
          sh 'mv target/*.war target/myweb.war'
       }
     
     }

     stage('Deploy to Tomcat'){ 
     
        steps {   
       sshagent(['tomcat-ec2id']) { 
          
          sh 'scp -o StrictHostKeyChecking=no target/myweb.war ubuntu@35.170.242.119:/var/lib/tomcat8/webapps/' 
       } 
       }
    } 



   
   }
  }
